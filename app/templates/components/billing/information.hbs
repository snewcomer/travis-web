<div class='billing-information-form'>
  <Billing::SelectedPlan
    @selectedPlan={{this.newSubscription.plan}}
    @goToFirstStep={{action this.goToFirstStep}}
  />
  <TravisForm @onSubmit={{action next}} as |form|>
    <div data-test-billing-form>
      <h3 data-test-contact-details-title='true'>
        Contact details
      </h3>
      <div class='flex flex--col flex-md-row'>
        <div class='full-width form-elem inline-form-elem'>
          <form.field
            @label='First Name'
            @value={{this.billingInfo.firstName}}
            @required={{true}}
            @showRequiredMark={{true}}
            @showValidationStatusIcons={{false}}
            @onChange={{action (mut this.billingInfo.firstName)}} as |Field|
          >
            <Field.input @name='firstname'/>
          </form.field>
        </div>
        <div class='full-width form-elem'>
          <form.field
            @label='Last Name'
            @value={{this.billingInfo.lastName}}
            @required={{true}}
            @showRequiredMark={{true}}
            @showValidationStatusIcons={{false}}
            @onChange={{action (mut this.billingInfo.lastName)}} as |Field|
          >
            <Field.input @name='lastname'/>
          </form.field>
        </div>
      </div>
      <div class='form-elem billing-optional-field'>
        <form.field
          @label='Company Name'
          @value={{this.billingInfo.company}}
          @showValidationStatusIcons={{false}}
          @onChange={{action (mut this.billingInfo.company)}} as |Field|
        >
          <Field.input @name='companyName'/>
        </form.field>
      </div>
      <div data-test-email-inputs-wrapper="true">
        <form.field
          @label='Billing Email Address'
          @isMultipleInputsField={{true}}
          @disableFrame={{true}}
          @required={{true}}
          @showRequiredMark={{true}}
          @showValidationStatusIcons={{false}}
          @validator={{form-validator form.validators.email}}
          @initialValue={{this.billingInfo.billingEmail}}
          as |Field|
        >
          <Field.multipleInputs @updateValues={{action 'updateEmails'}}/>
        </form.field>
      </div>
      <h3 data-test-billing-details-title='true'>
        Billing address
      </h3>
      <div class='flex flex--col flex-md-row'>
        <div class='full-width form-elem inline-form-elem'>
          <form.field
            @label='Street Address'
            @value={{this.billingInfo.address}}
            @required={{true}}
            @showRequiredMark={{true}}
            @showValidationStatusIcons={{false}}
            @onChange={{action (mut this.billingInfo.address)}}
            as |Field|
          >
            <Field.input @name='address'/>
          </form.field>
        </div>
        <div class='full-width form-elem'>
          <form.field
            @label='City'
            @value={{this.billingInfo.city}}
            @required={{true}}
            @showRequiredMark={{true}}
            @showValidationStatusIcons={{false}}
            @onChange={{action (mut this.billingInfo.city)}}
            as |Field|
          >
            <Field.input @name='city'/>
          </form.field>
        </div>
      </div>
      <div class='flex flex--col flex-md-row'>
        <div class='full-width form-elem inline-form-elem'>
          <form.field
            @label='Zip Code'
            @value={{this.billingInfo.zipCode}}
            @required={{true}}
            @showRequiredMark={{true}}
            @showValidationStatusIcons={{false}}
            @onChange={{action (mut this.billingInfo.zipCode)}}
            as |Field|
          >
            <Field.input @name='zip'/>
          </form.field>
        </div>
        <div class='form-elem full-width select' data-billing-form-select>
          <form.field
            @label='Country'
            @value={{this.billingInfo.country}}
            @required={{true}}
            class='billing-country'
            @showRequiredMark={{true}}
            @showValidationStatusIcons={{false}}
            @onChange={{action (mut this.billingInfo.country)}}
            as |Field|
          >
            <Field.select
              @placeholder='Select country'
              @options={{this.countries}} as |country|
            >
              {{country}}
            </Field.select>
          </form.field>
      </div>
      </div>
      {{#if this.showNonZeroVatConfirmation}}
        <div class='flex justify-between items-center mb-16'>
          <div class='w-4/6 pr-2'>
            Is your company registered locally for VAT/GST?
          </div>
          <div class='w-1/6 text-right'>
            <form.field
              @value={{this.billingInfo.hasLocalRegistration}}
              @showValidationStatusIcons={{false}}
              @disableFrame={{true}}
              @onChange={{action (mut this.billingInfo.hasLocalRegistration) true}}
              as |Field|
            >
              <Field.checkbox>Yes</Field.checkbox>
            </form.field>
          </div>
          <div class='w-1/6 text-right'>
            <form.field
              @value={{not this.billingInfo.hasLocalRegistration}}
              @showValidationStatusIcons={{false}}
              @disableFrame={{true}}
              @onChange={{action (mut this.billingInfo.hasLocalRegistration) false}}
              as |Field|
            >
              <Field.checkbox>No</Field.checkbox>
            </form.field>
          </div>
        </div>
      {{/if}}
      {{#if this.showVatField}}
        <div class='form-elem-half-width inline-form-elem billing-optional-field'>
          <form.field
            @label='Vat Id'
            @required={{this.isVatMandatory}}
            @showRequiredMark={{this.isVatMandatory}}
            @value={{this.billingInfo.vatId}}
            @showValidationStatusIcons={{false}}
            @onChange={{action (mut this.billingInfo.vatId)}}
            as |Field|
          >
            <Field.input @name='vat'/>
          </form.field>
        </div>
      {{/if}}
      <div class='form-elem flex flex--wrap'>
        <button
          onclick={{action form.submit}}
          class='button--blue'
          data-test-proceed-to-payment-button
        >
          Proceed to Payment
        </button>
        <span data-test-back-to-plans='true' onClick={{action back}} class='link back-button'>
          Back to plans
        </span>
      </div>
    </div>
  </TravisForm>
</div>
